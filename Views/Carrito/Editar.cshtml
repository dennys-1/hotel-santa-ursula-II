@model Carrito

<h1>Editar Carrito</h1>

<form action="" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Quantity" ></label>
        <input asp-for="Quantity" type="text" class="form-control" >
    </div>
    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" type="text" class="form-control" >
    </div>
    <div class="form-group">
        <label asp-for="C_noches"></label>
        <input asp-for="C_noches" type="text" class="form-control" >
    </div>
  
    <button class="btn btn-primary">Editar</button>
</form>